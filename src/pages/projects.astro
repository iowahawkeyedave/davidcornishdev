---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title = "Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Projects</div>
  </div>

  <HorizontalCard
    title="Ganda's Remade"
    img="/gandas.webp"
    desc="Website for Ganda's, rebuilt using Astro, Tailwind CSS, Sass, and React."
    url="https://gandas.com/"
    badge="NEW"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="DavidCornish.dev"
    img="/post_img.webp"
    desc="Created this current website using HTML, Astro, and Tailwind CSS."
    url="https://davidcornish.dev/"
    badge="NEW"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Tempest Weather Widget"
    img="/post_img.webp"
    desc="Used HTML, CSS, and JavaScript to make a weather widget for my personal weather station, using the TempestWx API."
    url="https://davidcornish.dev/projects/TempestWx/"
    badge="NEW"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Ganda's"
    img="/post_img.webp"
    desc="Website for Ganda's, built with Wordpress."
    url="https://gandas.com/"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Cornish Tax"
    img="/post_img.webp"
    desc="Website for Cornish Tax, built with Wordpress."
    url="https://cornishtax.com/"
  />
</BaseLayout>
